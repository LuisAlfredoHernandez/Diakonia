{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vite-plugin-pwa/client",
            "vite/client"
        ],
        "paths": {
            "~/*": [
                "src/*"
            ],
            "#/*": [
                "types/*"
            ],
            "/#/*": [
                "types/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "sourceMap": true
    },
    "include": ["**/*", "**/*.d.ts"],
    "exclude": [
        "dist",
        "node_modules",
        "dev-dist",
        "**/*.js"
    ]
}
